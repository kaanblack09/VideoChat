
@{
}
@using Microsoft.AspNetCore.Http;
<head>
    <link rel="stylesheet" href="~/css/present.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/all.min.css">
</head>
@model ClassRoom
<script>
    const username = '@Context.Session.GetString("_Name")';
    const classid = '@Model.ClassID';
</script>
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <div class="video-cont">
                    <div class="room_master">
                        <video id="camera" class="camera-video" autoplay="autoplay"></video>
                    </div>
                    <div class="present_video">
                        <video id="screen" class="screen-video" autoplay="autoplay"></video>
                    </div>
                </div>
                <div class="control-cont">
                    <div class="row">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <div class="control-detail">
                                <a href="#" onclick="document.getElementById('id01').style.display='block'" class="buttons">
                                    Chi Tiết Cuộc gọi
                                    <i class="fas fa-chevron-up" style="margin-left: 5px;"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <div class="control-icons">
                                <div class="Icons" id="hangUp">
                                    <i class="fas fa-microphone"></i>
                                </div>
                                <div class="Icons" id="start">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="Icons" id="call">
                                    <i class="fas fa-video"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <div class="control-present">
                                <a href="#" onclick="document.getElementById('id02').style.display='block'" class="buttons">
                                    <i class="fas fa-file-powerpoint" style="margin-right:5px;"></i>
                                    Trình Chiếu
                                </a>
                                <div class="Icons">
                                    <i class="fas fa-ellipsis-v"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div class="tabs">
                    <div class="detail-cont">
                        <h3>Chi Tiết Lớp Học</h3>
                    </div>
                    <div class="tab-header">
                        <ul>
                            <li class="active">
                                <span class="text">Mọi Người</span>
                            </li>
                            <li>
                                <span class="text">Nhắn Tin</span>
                            </li>
                        </ul>
                    </div>
                    <div class="content">
                        <div class="tab_wrap" style="display: block;">
                            <div class="tab_content">
                                <div class="Add">
                                    <span class="Add-center">
                                        <span class="Add-cont">
                                            <div class="Add-Icons">
                                                <i class="fas fa-user-plus"></i>
                                            </div>
                                            <div>Thêm Người</div>
                                        </span>
                                    </span>
                                </div>
                                <div>
                                    <ul id="usersdata">

                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab_wrap" style="display: none;">
                            <div class="tab_content">
                                <div class="Send-cont">
                                    <form>
                                        <div class="send-input">
                                            <div class="input-div one">
                                                <div class="div">
                                                    <input type="text" class="input" placeholder="Chia sẽ với lớp">
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="send">
                                        <div class="Icons-sent">
                                            <i class="fas fa-paper-plane"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="id01" class="modal">
    <div class="create-cont">
        <form class="modal-present">
            <div class="present-cont">
                <div class="text"><h5>Tên Lớp :</h5></div>
                <div class="text"><h5>Mã Phòng : </h5></div>
                <div class="text"><h5>Chủ Đề :</h5></div>
                <div class="text"><h5>Phòng :</h5></div>
            </div>
            <div class="div-button">
                <a href="#"><button type="button" onclick="document.getElementById('id01').style.display='none'" class="btn btn-primary">Hủy</button></a>
            </div>
        </form>
    </div>
</div>
<div id="id02" class="modal">
    <div class="create-cont">
        <form class="modal-present">
            <div class="present-cont">
                <a href="#" class="buttons" style=" text-decoration: none;">
                    Chọn Từ Thư mục
                    <i class="fas fa-folder-plus" style="margin-left: 15px;"></i>
                </a>
            </div>
            <div class="div-button" style="margin-top:160px">
                <a href="#"><button class="btn btn-primary">Chia Sẽ</button></a>
                <a href="#"><button type="button" onclick="document.getElementById('id02').style.display='none'" class="btn btn-primary">Hủy</button></a>
            </div>  
        </form>
    </div>
</div>

@section Scripts{
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/present.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/ConnectionHub.js"></script>
}
